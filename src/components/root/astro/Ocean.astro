<style is:global>
    .ocean {
        width: 100%;
        height: 500px;
        overflow: hidden;
    }

    .wave {
        display: block;
        position: relative;
        height: 600px;
        width: 100%;
        background-color: white;
        /*background-image: linear-gradient(225deg, #784BA0 0%, #2B86C5 50%, #FF3CAC 100%);*/
        transform: scale(1, -1);
    }

    .wave:before {
  content: "";
  display: block;
  position: absolute;
  border-radius: 100%;
  width: 100%;
  height: 500px;
  background-color: #FF3CAC;
background: #1671b3;
  right: -25%;
  top: 20px;
}

.wave:after {
  content: "";
  display: block;
  position: absolute;
  border-radius: 100%;
  width: 100%;
  height: 500px;
  background-color: #FF3CAC;
background: #1671b3;
  left: -60%;
  top: -120px;
  
}

    @keyframes wave {
        from { transform: rotate(0deg);}
        from { transform: rotate(360deg);}
    }

</style>

<div class="ocean">
    <div class="wave"></div>
</div>